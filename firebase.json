{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/products",
        "destination": "/products.html"
      },
      {
        "source": "/journal",
        "destination": "/journal.html"
      },
      {
        "source": "/secondDrop",
        "destination": "/secondDrop.html"
      },
      {
        "source": "/thirdDrop",
        "destination": "/thirdDrop.html"
      },
      {
        "source": "/fourthDrop",
        "destination": "/fourthDrop.html"
      },
      {
        "source": "/iWantToLeave",
        "destination": "/iWantToLeave.html"
      }
    ]
  }
}
